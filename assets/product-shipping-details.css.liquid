.drawer__shipping{
    background-color: rgb(0,0,0,70%);
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    position: fixed;
    z-index: 100;
    width: 100%;
    height: 100%;
    transition: .3s all;
}
.drawer__shipping .drawer__close{
  width:14px;
  height:14px;
}
.drawer_shipping_close{
    width: 100%;
    height: 100%;
    cursor: pointer;
}
.drawer__close_shipping{
	align-items: center;
    display: flex;
    height: 32px;
    justify-content: center;
    right: 12px;
    top: 22px;
    width: 32px;
    z-index: 20;
    position: absolute;
    cursor: pointer;
}
.product_shipping_dialog{
	right: 0;
    left: unset;
    width: 490px;
    height: 100%;
    padding: 0 20px;
    border-radius: 0;
    background: #fff;
    box-sizing: border-box;
    bottom: 0;
    position: absolute;
    z-index: 999;
    overflow: hidden;
    overflow-x: unset;
    overflow-y: auto;
}
.product_shipping_dialog::-webkit-scrollbar{
    display: none; /* Chrome Safari */
}
.drawers__heading{
    color: #000;
    margin-bottom: 18px;
    text-transform: uppercase;
    margin-top: 23px;
    font-style: normal;
    font-weight: 600;
    font-size: 16px;
    line-height: 32px;
}

.product_shipping_title{
 	list-style: none;
    width: 100%;
    display: flex;  
    justify-content: space-between;
  	flex-wrap: wrap;
    cursor: pointer;
    border-bottom: 1px solid #dfdfdf;
    margin-bottom: 30px;
  	-webkit-tap-highlight-color: transparent;
    display:none;
}

.product_shipping_title li{
    font-style: normal;
    font-weight: 400;
    font-size: 12px;
    line-height: 21px;
	color: #919191;
    cursor: pointer;
    transition: color .2s ease;
  	box-sizing: border-box;
 	 -webkit-tap-highlight-color:rgba(0,0,0,0);
}
.product_shipping_title li.tab_title_active{
    border-bottom: 1px solid #000;
    color: #000;
}
.tab__panel table{
  	width: 100%;
    margin-bottom: 20px;
    border: none;
  	background: transparent;
    font-style: normal;
    font-weight: 400;
    font-size: 12px;
    line-height: 21px;
}
.product_shipping_dialog .tab__panel h3.hc-tab:nth-of-type(2){
	border-top: 1px solid #DFDFDF;
  	padding-top:10px;
}

.tab__panel table tr td{
    border-left: none;
    border-right: none;
    border-bottom: none;
    border-top: none;
    padding: 2px 8px 2px 0;
    font-size: 12px;
}
.tab__panel table tr td:last-child{
	text-align:right;
}
p.hc-tab{
    letter-spacing: .25px;
  	font-weight: 350;
    font-size: 13px;
    line-height: 16px;
}
p.hc-tab a{
  text-decoration: underline;
  color: #000;
  font-weight: bold;
}
h3.hc-tab{
  font-style: normal;
  font-weight: 600;
  font-size: 14px;
  line-height: 21px;
  margin-bottom: 6px;
}
.tab__panel{
	display: none;
}
.tab_active{
	display: block;
}


@media screen and (max-width: 740px){
  .product_shipping_dialog{
      width: 100%;
      height: auto;
      max-height: calc(100vh - 250px);
      padding: 0 10px;
      border-top-left-radius: 4px;
      border-top-right-radius: 4px;
      padding-bottom: 50px;
  }   
  .product_shipping_title{
      flex-wrap: wrap;
  }
  .drawers__heading{
      text-align: center;
      padding: 18px 0;
      margin: 0;    
      line-height: 18px;
  }
  .drawer__close_shipping{
    top: 12px;
  }
}
