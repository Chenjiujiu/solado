    font-weight: 600;
    font-size: 14px;
    line-height: 21px;
}
@media only screen and (max-width: 767px) {
   .refund_policy_popup .refund_policy_dialog{
    padding: 20px 16px;
        width: auto;
     top: 362px;
  }
  .refund_policy_popup .refund_policy_popup-close{
