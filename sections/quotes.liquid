    ],
    "presets": [
      {
        "name": "Testimonials",
        "category": "4. Text",
        "blocks": [
          {
            "type": "quote"
          },
          {
            "type": "quote"
          },
          {
            "type": "quote"
          }
        ]
      }
    ]
  }
{% endschema %}

<style>
 
  .quotes-slider .slick-slide { {% if section.settings.text_bg != 'rgba(0,0,0,0)' %} padding:30px; {% else %} padding:0 30px 30px;{% endif %} background:{{ section.settings.text_bg}}; margin:0 15px; }     
  
  {% if section.settings.quoteStyle == 'style3' %}
  .quotes-slider .slick-slide {padding:0;}
  .quote-bg .author-pic img {border-radius:0;}
  .quote-bg blockquote {padding:10px 30px 30px;}
  {% endif %}
  
  {% if section.settings.section_width %} 
  .quote-bg { padding:40px; background-color:{{section.settings.testimonials_bg}}; {% if section.settings.testimonials_bg_img != blank %} background-image:url('{{section.settings.testimonials_bg_img | img_url:'master'}}'); background-repeat:no-repeat; background-position:50% 50%; {% endif %}; } 
  {% else %}
  .quote-bg-inner { padding:30px 0; background-color:{{section.settings.testimonials_bg}}; {% if section.settings.testimonials_bg_img != blank %} background-image:url('{{section.settings.testimonials_bg_img | img_url:'master'}}'); background-repeat:no-repeat; background-position:50% 50%; {% endif %} } 
  {% endif %}  
  
  .quote-bg .slick-dots li button { background:none;  border:1px solid {{section.settings.testimonials_text}};}
  .quote-bg .slick-dots li.slick-active button { background:{{section.settings.testimonials_text}}; }
  
  .quote-bg .sec-ttl h3 {color:{{section.settings.testimonials_hd}};}
  .quotes-slider p { color:{{section.settings.testimonials_text}}; }
  
  #Quotes-{{section.id}} .ad { color:{{section.settings.rating_clr}}; font-size:{{settings.star_size}}px; margin-left:1px}
  #Quotes-{{section.id}} .ad-star { color:{{section.settings.rating_clr | color_modify:'alpha', 0.8}}  }
</style>