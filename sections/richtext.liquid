        "id": "title",
        "label": "Title",
		"default": "<b>I AM RICH TEXT BLOCK</b>"		
        },
		{
            "type": "range",
            "id": "ttl-text-size",
            "label": "Title Font Size",
            "min": 12,
            "max": 100,
            "step": 1,
            "unit": "px",
            "default": 20
         },
		{
