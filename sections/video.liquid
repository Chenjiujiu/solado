<div class="content-indent{% if section.settings.hide_mobile %} small--hide{% endif %} {{ section.settings.top-offeset}} wow fadeIn"> 	
  <div class="wow fadeIn {{section.settings.style}}{% unless section.settings.section_width %} page-width {% else %}fullwidth-{{section.id}} {% endunless %}">  
  	
   <div class="video-sec{% if section.settings.snow_effect %} falling-snow{% endif %}{% if section.settings.snow_style == "style2" %} style2{% else %} style1{% endif %}">   
      {% if section.settings.video_url == blank and section.settings.mp4url == blank	%}
      	<div class="video-wrapper">
          <iframe src="//www.youtube.com/embed/_9VUPq3SxOc?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe>
        </div>
      {% else %}         
         {% if section.settings.video_url.type == "youtube" %}        
         <div class="video-wrapper"><iframe src="//www.youtube.com/embed/{{ section.settings.video_url.id }}?rel=0&showinfo=0&vq=720" width="850" height="480" frameborder="0" allowfullscreen></iframe></div>
         {% endif %}
         {% if section.settings.video_url.type == "vimeo" %}
         <div class="video-wrapper"><iframe src="//player.vimeo.com/video/{{ section.settings.video_url.id }}?byline=0&portrait=0&badge=0" width="850" height="480" frameborder="0" allowfullscreen></iframe></div>
         {% endif %}     
     
         {% if section.settings.video_url == blank and section.settings.mp4url != blank %}
         <video width="100%" autoplay loop muted playsinline>
           <source src="{{section.settings.mp4url}}" codecs="avc1.4d002a, mp4a.40.2" type="video/mp4">
           Your browser does not support the video tag.
           </source>
         </video>    
          {% endif %}    
      {% endif %}              
    {%- if section.settings.title != blank or section.settings.btntxt != blank -%}
    <div class="video-text {{ section.settings.text_align }}">
      <span class="ttl{% if section.settings.hide_text %} small--hide{% endif %}">{{ section.settings.title }}</span>      
      {% if section.settings.btntxt != blank %}
      <a href="{{section.settings.btnurl}}" class="btn{% if section.settings.hide_btn %} small--hide{% endif %} {{section.settings.btn-style}}" >{{ section.settings.btntxt}}</a>
      {% endif %}
    </div>
    {% endif %}
   </div>
  
  </div>  
</div>
<style>
 .ttl {color:{{section.settings.color_ttl}};}
 @media only screen and (min-width: 1025px) {
    .fullwidth-{{section.id}} { padding-left:{{ section.settings.pad-desk}}px; padding-right:{{ section.settings.pad-desk}}px; }
  } 
  @media only screen and (max-width: 1024px) {
     .fullwidth-{{section.id}} { padding-left:{{ section.settings.pad-ipad}}px; padding-right:{{ section.settings.pad-ipad}}px; }
   } 
  @media only screen and (max-width: 767px) {
     .fullwidth-{{section.id}} { padding-left:{{ section.settings.pad-mbl}}px; padding-right:{{ section.settings.pad-mbl}}px; }
   } 
</style>
