<div class="content-indent {{ section.settings.top-offeset}}" id="{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="masonary">    
  <div class="{% if section.settings.fullwidth %}lbhome fullwidth-{{section.id}}{% else %}page-width{%endif%}">     
   
    {%- if section.settings.title != blank  or section.settings.subtitle != blank -%}
    <div class="sec-ttl {{ settings.title_align}} wow fadeIn">
      <h3 class="h3">{{ section.settings.title }}</h3>
      {%- if section.settings.subtitle != blank -%}<span>{{section.settings.subtitle}}</span>{%- endif -%}
    </div>
    {%- endif -%}

     <div class="flex lookbook grid-masonary gallery grid-mr">
        <div class="grid-sizer-{{section.id}} col-{{section.settings.grid-spacing-col}}"></div>
        {% for block in section.blocks limit: section.blocks.size %}

        {% assign product_box = forloop.index | minus:1 %}
        {% assign delay_time = 50 | times : product_box %}    	

        {% case block.settings.width %}
        {% when '20%' %}
        {%- assign block_width = 'small--one-whole medium-up--one-fifth' -%}
        {% when '25%' %}
        {%- assign block_width = 'small--one-whole medium-up--one-quarter' -%}
        {% when '33%' %}
        {%- assign block_width = 'small--one-whole medium-up--one-third' -%}
        {% when '40%' %}
        {%- assign block_width = 'small--one-whole medium-up--two-fifths' -%}
        {% when '50%' %}
        {%- assign block_width = 'small--one-whole medium-up--one-half' -%}
        {% when '60%' %}
        {%- assign block_width = 'small--one-whole medium-up--tree-fifths' -%}
        {% when '66%' %}
        {%- assign block_width = 'small--one-whole medium-up--two-thirds' -%}
        {% when '75%' %}
        {%- assign block_width = 'small--one-whole medium-up--three-quarters' -%}
        {% when '80%' %}        
        {%- assign block_width = 'small--one-whole medium-up--four-fifths' -%}
        {% when '100%' %}          
        {%- assign block_width = 'one-whole' -%}
        {% endcase %}       

        {% if block.settings.image!= blank %}          
        <div class="ms-item grid-lookbook col-mr {{ block_width }} wow fadeInUp" data-wow-delay="{{delay_time}}ms">
           <div class="collection-grid-item gallery">
             <span class="zoom-img zoom"><i class="ad ad-expand"></i></span>             
             
             <a class="zoom"  href="javascript:void(0)" onclick="{{ block.settings.image | img_url:'master' }}" data-size="{{block.settings.image.width}}x{{block.settings.image.height}}">                  		                     	                                        
               {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
               <img class="imgFl lazyload" src="{{ block.settings.image | img_url: '50x' }}" data-src="{{ img_url }}"
                    data-widths="[300, 500, 750, 1000, 1350, 1600, 2000]" data-aspectratio="{{ block.settings.image.aspect_ratio }}" data-sizes="auto" alt="{{ block.settings.image.alt | escape }}" />
             </a>
             
             {% if block.settings.title != blank or  block.settings.title2 != blank %}
             <div class="lookbook-caption">
               {% if block.settings.url != blank %}<a href="{{ block.settings.url}}">{% endif %}  
               {% if block.settings.title != blank %}
               <span class="text-1">{{ block.settings.title }}</span>
               {% endif %}

               {% if block.settings.title2 != blank %}
               <span class="text-2">{{ block.settings.title2 }}</span>
               {% endif %}
               {% if block.settings.url != blank %}</a>{% endif %}  
             </div>
             {% endif %}             
          </div>
        </div>
        {% endif %}
        {% endfor %}
      </div>
  </div>
</div>

<style>
  .grid-mr { margin:0 -{{ section.settings.grid-spacing | divided_by: 2.0  }}px; }
  .col-mr .collection-grid-item  { margin:0 {{ section.settings.grid-spacing | divided_by: 2.0  }}px {{ section.settings.grid-spacing}}px; }

  {% if section.settings.fullwidth %}
  @media only screen and (min-width: 1025px) {
    .fullwidth-{{section.id}} { padding-left:{{ section.settings.pad-desk}}px; padding-right:{{ section.settings.pad-desk}}px; }
  } 
  @media only screen and (max-width: 1024px) {
    .fullwidth-{{section.id}} { padding-left:{{ section.settings.pad-ipad}}px; padding-right:{{ section.settings.pad-ipad}}px; }
  } 
  @media only screen and (max-width: 767px) {
    .fullwidth-{{section.id}} { padding-left:{{ section.settings.pad-mbl}}px; padding-right:{{ section.settings.pad-mbl}}px; }    
  } 
  {% endif %}
  @media only screen and (max-width: 767px) {
    .gallery.grid-mr { margin-left:-{{ section.settings.grid-spacing-mbl | divided_by: 2.0  }}px; margin-right:-{{ section.settings.grid-spacing-mbl | divided_by: 2.0  }}px; }
    .col-mr .collection-grid-item  { margin:0 {{ section.settings.grid-spacing-mbl | divided_by: 2.0  }}px {{ section.settings.grid-spacing-mbl}}px;}
  }
  .lookbook-caption { background:{{ section.settings.cap_bg}}; }
  .lookbook-caption span { color:{{ section.settings.cap_text}}; }
  .zoom-img { background:{{ section.settings.zoom_bg}}; }
  .zoom-img .ad { color:{{ section.settings.zoom_text }}; }
</style>

